
// Testimonials Carousel
let testimonialIndex = 0;
const testimonialContainer = document.querySelector('.testimonial-container');
const totalTestimonials = document.querySelectorAll('.testimonial-section').length;

const testimonialPrevBtn = document.getElementById('testimonial-prev-btn');
const testimonialNextBtn = document.getElementById('testimonial-next-btn');

let testimonialAutoSlideTimer;

function updateTestimonialPosition() {
    const offset = -testimonialIndex * 100; // Calculate translateX based on index
    testimonialContainer.style.transform = `translateX(${offset}%)`;
}

// Navigate to the next testimonial
function goToNextTestimonial() {
    testimonialIndex = (testimonialIndex === totalTestimonials - 1) ? 0 : testimonialIndex + 1;
    updateTestimonialPosition();
}

// Navigate to the previous testimonial
function goToPreviousTestimonial() {
    testimonialIndex = (testimonialIndex === 0) ? totalTestimonials - 1 : testimonialIndex - 1;
    updateTestimonialPosition();
}

// Event listeners for buttons
testimonialPrevBtn.addEventListener('click', () => {
    goToPreviousTestimonial();
    resetTestimonialAutoSlideTimer();
});
testimonialNextBtn.addEventListener('click', () => {
    goToNextTestimonial();
    resetTestimonialAutoSlideTimer();
});

// Auto-slide functionality
function startTestimonialAutoSlide() {
    testimonialAutoSlideTimer = setInterval(goToNextTestimonial, 7000);
}

function resetTestimonialAutoSlideTimer() {
    clearInterval(testimonialAutoSlideTimer);
    startTestimonialAutoSlide();
}

// Initialize testimonials
startTestimonialAutoSlide();
updateTestimonialPosition();
